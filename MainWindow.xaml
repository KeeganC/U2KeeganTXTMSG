<Window x:Class="U2KeeganTXTMSG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:U2KeeganTXTMSG"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox 
            x:Name="txbInput"
            AcceptsReturn="True"
            HorizontalAlignment="Left" 
            Height="286" 
            Margin="10,10,0,0" 
            TextWrapping="Wrap" 
            Text="Input" 
            VerticalAlignment="Top" 
            Width="200"/>
        
        <TextBox 
            x:Name="txbOutput"
            IsReadOnly="True"
            HorizontalAlignment="Left" 
            Height="286" 
            Margin="307,10,0,0" 
            TextWrapping="Wrap" 
            Text="Output" 
            VerticalAlignment="Top" 
            Width="200"/>
        
        <Button 
            x:Name="btnTranslate"
            Content="Translate" 
            HorizontalAlignment="Left" 
            Height="34" 
            Margin="210,135,0,0" 
            VerticalAlignment="Top" 
            Width="92"
            Click="btnTranslate_Click"/>

    </Grid>
</Window>
